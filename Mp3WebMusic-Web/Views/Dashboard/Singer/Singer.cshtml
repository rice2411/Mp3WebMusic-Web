
<div>
    <h1>Topic Management</h1>
    <div class="row">
        <div class=" col-lg-12 mt-3">
            <a href="javascript:void(0);" class="btn btn-info"
               onclick="singer.openAddEditSinger()">Create</a>
        </div>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>SingerID</th>
                <th>SingerName</th>
                <th>SingerNickName</th>
                <th>View</th>
                <th>Introduce</th>
                <th>Avatar</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="tbTopic">
        </tbody>
    </table>
</div>

<!-- Modal -->
<div id="addEditSinger" class="modal fade" data-backdrop="false" role="dialog">
    <div class="modal-dialog modal-lg">
        <form id="frmAddEditSinger">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add New Employee</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <input hidden id="SingerID" name="SingerID">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-4">
                            <div class="row form-group">
                                <div class="col-12">
                                    <img src="/images/noavatar.png" id="Avatar" width="200" height="210" />
                                    <input type="file" id="FileUpload" class="custom-file" accept="image/*" onchange="singer.Avatar(this)" />
                                </div>
                            </div>
                        </div>
                        <div class="col-8">
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Singer Name</label>
                                </div>
                                <div class="col-9">
                                    <input type="text" id="EmployeeName" name="EmployeeName" class="form-control" data-rule-required="true">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Date of birth</label>
                                </div>
                                <div class="col-9">
                                    <input type="date" id="DoB" name="DoB" class="form-control" data-rule-required="true">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Gender</label>
                                </div>
                                <div class="col-9">
                                    <select class="custom-select" id="Gender" name="Gender">
                                    </select>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Department</label>
                                </div>
                                <div class="col-9">
                                    <select class="custom-select" id="Department" name="Department">
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                    <a href="javascript:;" class="btn btn-danger" onclick="employee.save()">Save</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script src="~/js/employee.js" asp-append-version="true"></script>
}