


<div>
    <h1>Type Management</h1>
    <div class="row">
        <div class=" col-lg-12 mt-3">
            <a href="javascript:void(0);" class="btn btn-info"
               onclick="type.openAddType()">Create</a>
        </div>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                
                <th>Tên chủ đề</th>
                <th>Xóa chủ đề</th>
                
            </tr>
        </thead>
        <tbody id="tbtype">
        </tbody>
    </table>
    <!-- Modal Create -->
    <div id="addType" class="modal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add New Type</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <input hidden id="TypeID" name="TypeName">
                <div class="modal-body">
                    <div class="row form-group">
                        <div class="col-3">
                            <label>TypeName</label>
                        </div>
                        <div class="col-9">
                            <input type="text" id="TypeName" name="TypeName" class="form-control" data-rule-required="true">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                    <a href="javascript:;" class="btn btn-success" onclick="type.add()">Save</a>

                </div>
            </div>
            
        </div>
    </div>
