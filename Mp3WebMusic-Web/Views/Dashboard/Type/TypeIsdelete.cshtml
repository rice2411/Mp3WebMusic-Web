                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                    <a href="javascript:;" class="btn btn-primary" onclick="type.edit()">Update</a>

                </div>
            </div>
            
        </div>
    </div>
    <!-- Modal Delete-->
    <div class="modal fade" id="deleteType" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Delete Type</h4>
                </div>
                <div class="modal-body">
                    <p>Do you want to delete this type?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                    <a href="javascript:;" class="btn btn-danger" onclick="type.delete()">Yes</a>

                </div>
            </div>
        </div>
