



<h1>Type Management</h1>
<div class="row">
    <div class=" col-lg-12 mt-3">
        <a href="javascript:void(0);" class="btn btn-info"
           onclick="types.openAddType()">Create</a>
    </div>
</div>
<div>
    <table class="table table-bordered table-hover" id="table">
        <thead>
            <tr>
                <th>Tên chủ đề</th>
                <th>Poster</th>
                <th>Status</th>
                <th>ACtions</th>

            </tr>
        </thead>
        <tbody id="tbtype">
        </tbody>
    </table>
</div>
<div id="addType" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add New Topic</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form id="addTypeForm" onsubmit="return false">
                <input hidden id="TypeID" name="TypeName">
                <div class="modal-body">
                    <div asp-validation-summary="All"></div>
                    <div class="row form-group">
                        <div class="col-3">
                            <label>TypeName</label>
                        </div>
                        <div class="col-9">
                            <input type="text" id="TypeName" name="TypeName" class="form-control" data-rule-required="true">

                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-3">
                            <label>Poster</label>
                        </div>
                        <div class="col-9">
                            <img src="" id="Poster" width="200" height="210" />
                            <input type="file" id="FileUpload" class="custom-file" accept="image/*" onchange="types.uploadPoster(this)" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-danger" onclick="return types.add()" value="Save">

                </div>
            </form>
        </div>

    </div>
</div>
<!-- Modal Edit -->
<div id="editType" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add New Topic</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <input hidden id="TypeIDEdit" name="">
            <form id="editTypeForm" onsubmit="return false">
                <div class="modal-body">
                    <div class="row form-group">
                        <div class="col-3">
                            <label>TypeName</label>
                        </div>
                        <div class="col-9">
                            <input type="text" id="TypeNameEdit" name="EditTypeName" class="form-control" data-rule-required="true">
                        </div>
                        <div class="col-3">
                            <label>Poster</label>
                        </div>
                        <div class="col-9">
                            <img src="" id="editPoster" width="200" height="210" />
                            <input type="file" id="FileUpload" class="custom-file" accept="image/*" onchange="types.editPoster(this)" />
                        </div>
                    </div>
                </div>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                <input type="submit" class="btn btn-danger" onclick="return types.edit()" value="Save">

            </div>
        </div>

    </div>
</div>
<!-- Modal Delete-->
<div class="modal fade" id="deleteType" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete Topic</h4>
            </div>
            <div class="modal-body">
                <p>Do you want to delete this topic?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                <a href="javascript:;" class="btn btn-danger" onclick="types.delete()">Yes</a>

            </div>
        </div>
    </div>
</div>
    


<!-- jQuery -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/js/metisMenu.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/startmin.js"></script>
@section Scripts{
    <script src="~/js/type.js" asp-append-version="true"></script>

}
