
@model TypeResult;

<h1>Type Management</h1>
<div class="row container">
    <div class=" col-10 my-3">
        <a href="javascript:void(0);" class="btn btn-info" style="margin-bottom: 15px; margin-left: 25px; border-radius: 60px; font-size: 25px;"
           onclick="type.openAddEditType()">Create</a>
    </div>
</div>
<table id="tbType" class="table table-bordered table-hover" style="font-size: 20px">
    <thead>
        <tr style="background-color:white">
            <th>Type ID</th>
            <th>Type Name</th>            
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Default</td>
            <td>Defaultson</td>
            <td>def@somemail.com</td>
        </tr>
        <tr class="table-primary">
            <td>Primary</td>
            <td>Joe</td>
            <td>joe@example.com</td>
        </tr>
        <tr class="table-success>
            <td>Success</td>
            <td>Doe</td>
            <td>john@example.com</td>
        </tr>
        <tr class="table-danger">
            <td>Danger</td>
            <td>Moe</td>
            <td>mary@example.com</td>
        </tr>
        <tr class="table-info">
            <td>Info</td>
            <td>Dooley</td>
            <td>july@example.com</td>
        </tr>
        <tr class="table-warning">
            <td>Warning</td>
            <td>Refs</td>
            <td>bo@example.com</td>
        </tr>
        <tr class="table-active">
            <td>Active</td>
            <td>Activeson</td>
            <td>act@example.com</td>
        </tr>
        <tr class="table-secondary">
            <td>Secondary</td>
            <td>Secondson</td>
            <td>sec@example.com</td>
        </tr>
        <tr class="table-light">
            <td>Light</td>
            <td>Angie</td>
            <td>angie@example.com</td>
        </tr>
        <tr class="table-dark text-dark">
            <td>Dark</td>
            <td>Bo</td>
            <td>bo@example.com</td>
        </tr>
    </tbody>
</table>
<!-- Modal -->
<div id="addEditType" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <form id="fromAddEditType">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add New Type</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <input hidden id="TypeID" name="TypeName">
                <div class="modal-body">
                    <div class="row form-group">
                        <div class="col-3">
                            <label>TypeName</label>
                        </div>
                        <div class="col-9">
                            <input type="text" id="TypeName" name="TypeName" class="form-control" data-rule-required="true">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                    <a href="javascript:;" class="btn btn-danger" onclick="type.save()">Save</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/Type.js" asp-append-version="true"></script>
}
