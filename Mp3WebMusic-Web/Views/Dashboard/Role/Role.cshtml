


<div>
    <h1>Role Management</h1>
    <div class="row">
        <div class=" col-lg-12 mt-3">
            <a href="javascript:void(0);" class="btn btn-info"
               onclick="role.openAddRole()">Create</a>
        </div>
    </div>
    <br />
    <div class="table-responsive">
        <table class="table table-striped text-center table-hover " style="font-size: 10px;" id="table">
            <thead class="thead-dark">
                <tr>
                    <th> # </th>
                    <th> Role Name </th>
                    <th> Status</th>
                    <th> Actions </th>

                </tr>
            </thead>
            <tbody id="tbRole">
            </tbody>
        </table>
    </div>
    <!-- Modal Create -->
    <div id="addRole" class="modal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add New Role</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <input hidden id="RoleID" name="TopicName">
                <div class="modal-body">

                    <div class="row form-group">
                        <div class="col-3">
                            <label>Role Name</label>
                        </div>
                        <div class="col-9">
                            <input type="text" id="RoleName" name="RoleName" class="form-control" data-rule-required="true">

                        </div>
                    </div>
                   
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                    <a href="javascript:;" class="btn btn-success" onclick="role.add()">Save</a>

                </div>
            </div>

        </div>
    </div>
    <!-- Modal Edit -->
    <div id="editRole" class="modal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Role</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <input hidden id="RoleIDEdit" name="RoleName">
                <div class="modal-body">
                    <div class="row form-group">
                        <div class="col-3">
                            <label>Role Name</label>
                        </div>
                        <div class="col-9">
                            <input type="text" id="RoleNameEdit" name="RoleName" class="form-control" data-rule-required="true">
                        </div>
                        
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                    <a href="javascript:;" class="btn btn-primary" onclick="role.edit()">Update</a>

                </div>
            </div>

        </div>
    </div>
    <!-- Modal Delete-->
    <div class="modal fade" id="deleteTopic" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Delete Topic</h4>
                </div>
                <div class="modal-body">
                    <p>Do you want to delete this topic?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                    <a href="javascript:;" class="btn btn-danger" onclick="topic.delete()">Yes</a>

                </div>
            </div>
        </div>
    </div>
</div>



