


<link href="~/css/site.css" rel="stylesheet" />
<h1>Author Management</h1>
<div class="row">
    <div class=" col-lg-12 mt-3">
        <a href="javascript:void(0);" class="btn btn-info"
           onclick="author.openAddauthor()">Create</a>
    </div>
</div>
<table class="table table-bordered table-hover" id="table">
    <thead>
        <tr>
        
            <th>Tên tác giả</th>
            <th>Avatar</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>

    </thead>
    <tbody id="tbauthor">
    </tbody>
</table>

<div id="addAuthor" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <form id="addAuthorForm" onsubmit="return false">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #d8d8d8; border-bottom-color: #d8d8d8">
                    <h4 class="modal-title">Add New Author</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <input hidden id="AuthorID" name="AuthorID">

                <div class="modal-body" style="background-color: #d8d8d8; border-bottom-color: #d8d8d8">
                    <div class="row container-fluid">
                        <div class="col-4">
                            <div class="row form-group">
                                <div class="col-12">
                                    <img src="~/images/nonavatar.jpg" id="Avatar" width="200" height="210" />
                                    <input type="file" id="FileUpload" class="custom-file" accept="image/*" onchange="author.uploadAvatar(this)" />
                                </div>
                            </div>
                        </div>
                        <div class="col-8">
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Author Name</label>
                                </div>
                                <div class="col-9">
                                    <input type="text" id="AuthorName" name="AuthorName" class="form-control">
                                </div>
                            </div>
                        
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Introduce</label>
                                </div>
                                <div class="col-9">
                                    <input type="text" id="Introduce" name="Introduce" class="form-control" data-rule-required="true">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer" style="background-color: #d8d8d8; border-top-color: #d8d8d8">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-danger" onclick="return author.add()" value="Save">
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Modal Edit -->
<div id="editAuthor" class="modal fade"  role="dialog">
    <div class="modal-dialog modal-lg">
        <form id="editAuthorForm" onsubmit="return false">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add New Author</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <input hidden id="editAuthorID" name="AuthorID">

                <div class="modal-body container">
                    <div class="row">
                        <div class="col-4">
                            <div class="row form-group">
                                <div class="col-12">
                                    <img src="~/images/nonavatar.jpg" id="editAvatar" width="200" height="210" />
                                    <input type="file" id="FileEdit" class="custom-file" accept="image/*" onchange="author.editAvatar(this)" />
                                </div>
                            </div>
                        </div>
                        <div class="col-8">
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Author Name</label>
                                </div>
                                <div class="col-9">
                                    <input type="text" id="editAuthorName" name="editAuthorName" class="form">
                                </div>
                            </div>
                      
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>Introduce</label>
                                </div>
                                <div class="col-9">
                                    <input type="text" id="editIntroduce" name="editIntroduce" class="form-control" data-rule-required="true">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-danger" onclick="return author.edit()" value="Edit">
                </div>
            </div>
        </form>
    </div>
</div>

<!-- jQuery -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/js/metisMenu.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/startmin.js"></script>
