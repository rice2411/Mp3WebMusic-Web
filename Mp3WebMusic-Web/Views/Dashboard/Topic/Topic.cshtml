


    <div>
        <h1>Topic Management</h1>
        <div class="row">
            <div class=" col-lg-12 mt-3">
                <a href="javascript:void(0);" class="btn btn-info"
                   onclick="topic.openAddTopic()">Create</a>
            </div>
        </div>
        <br />
        <div class="table-responsive">
            <table class="table table-striped text-center table-hover " style="font-size: 10px;" id="table">
                <thead class="thead-dark">
                    <tr>
                        <th> # </th>
                        <th> Topic Name </th>
                        <th> Status</th>
                        <th> Actions </th>

                    </tr>
                </thead>
                <tbody id="tbTopic">
                </tbody>
            </table>
        </div>
        <!-- Modal Create -->
        <div id="addTopic" class="modal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Add New Topic</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <input hidden id="TopicID" name="TopicName">
                    <div class="modal-body">
                 
                        <div class="row form-group">
                            <div class="col-3">
                                <label>TopicName</label>
                            </div>
                            <div class="col-9">
                                <input type="text" id="TopicName" name="TopicName" class="form-control" data-rule-required="true">

                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-3">
                                <label>Poster</label>
                            </div>
                            <div class="col-9">
                                <img src="" id="Poster" width="200" height="210" />
                                <input type="file" id="FileUpload" class="custom-file" accept="image/*" onchange="topic.uploadAvatar(this)" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                        <a href="javascript:;" class="btn btn-success" onclick="topic.add()">Save</a>

                    </div>
                </div>
                
            </div>
        </div>
        <!-- Modal Edit -->
        <div id="editTopic" class="modal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Add New Topic</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <input hidden id="TopicIDEdit" name="TopicName">
                    <div class="modal-body">
                        <div class="row form-group">
                            <div class="col-3">
                                <label>TopicName</label>
                            </div>
                            <div class="col-9">
                                <input type="text" id="TopicNameEdit" name="TopicName" class="form-control" data-rule-required="true">
                            </div>
                           <div class="col-3">
                            <label>Poster</label>
                        </div>
                        <div class="col-9">
                            <img src="" id="editPoster" width="200" height="210" />
                            <input type="file" id="FileUpload" class="custom-file" accept="image/*" onchange="topic.editAvatar(this)" />
                        </div>
                    </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                        <a href="javascript:;" class="btn btn-primary" onclick="topic.edit()">Update</a>

                    </div>
                </div>
                
            </div>
        </div>
        <!-- Modal Delete-->
        <div class="modal fade" id="deleteTopic" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Delete Topic</h4>
                    </div>
                    <div class="modal-body">
                        <p>Do you want to delete this topic?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                        <a href="javascript:;" class="btn btn-danger" onclick="topic.delete()">Yes</a>

                    </div>
                </div>
            </div>
        </div>
    </div>



<!-- jQuery -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/js/metisMenu.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/startmin.js"></script>
@section Scripts{
    <script src="~/js/topic.js" asp-append-version="true"></script>

}
