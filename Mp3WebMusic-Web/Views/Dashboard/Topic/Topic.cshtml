
@model TopicResult;

<h1>Topic Management</h1>
<div class="row">
    <div class=" col-10 my-3">
        <a href="javascript:void(0);" class="btn btn-info"
           onclick="topic.openAddEditTopic()">Create</a>
    </div>
</div>
<table id="tbTopic" class="table table-bordered table-hover">
    <thead>
        <tr style="background-color:black">
            <th>TopicID</th>
            <th>TopicName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<!-- Modal -->
<div id="addEditTopic" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <form id="fromAddEditTopic">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add New Topic</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <input hidden id="TopicID" name="TopicName">
                <div class="modal-body">
                    <div class="row form-group">
                        <div class="col-3">
                            <label>TopicName</label>
                        </div>
                        <div class="col-9">
                            <input type="text" id="TopicName" name="TopicName" class="form-control" data-rule-required="true">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                    <a href="javascript:;" class="btn btn-danger" onclick="topic.save()">Save</a>

                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/topic.js" asp-append-version="true"></script>
}
