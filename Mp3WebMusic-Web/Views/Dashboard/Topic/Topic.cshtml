


    <div>
        <h1>Topic Management</h1>
        <div class="row">
            <div class=" col-lg-12 mt-3">
                <a href="javascript:void(0);" class="btn btn-info"
                   onclick="topic.openAddEditTopic()">Create</a>
            </div>
        </div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>TopicID</th>
                    <th>TopicName</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="tbTopic">
            </tbody>
        </table>
        <!-- Modal -->
        <div id="addEditTopic" class="modal fade" role="dialog">
            <div class="modal-dialog modal-lg">
                <form id="fromAddEditTopic">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Add New Topic</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <input hidden id="TopicID" name="TopicName">
                        <div class="modal-body">
                            <div class="row form-group">
                                <div class="col-3">
                                    <label>TopicName</label>
                                </div>
                                <div class="col-9">
                                    <input type="text" id="TopicName" name="TopicName" class="form-control" data-rule-required="true">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                            <a href="javascript:;" class="btn btn-danger" onclick="topic.add()">Save</a>

                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- jQuery -->
        <script src="~/lib/jquery/dist/jquery.min.js"></script>

        <!-- Bootstrap Core JavaScript -->
        <script src="~/js/bootstrap.min.js"></script>

        <!-- Metis Menu Plugin JavaScript -->
        <script src="~/js/metisMenu.min.js"></script>

        <!-- Custom Theme JavaScript -->
        <script src="~/js/startmin.js"></script>
        @section Scripts{
            <script src="~/js/topic.js" asp-append-version="true"></script>

        }
    </div>