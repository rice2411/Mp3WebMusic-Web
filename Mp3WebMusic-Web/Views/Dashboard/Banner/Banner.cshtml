



<h1>Banner Management</h1>
<div class="row">
    <div class=" col-lg-12 mt-3">
        <a href="javascript:void(0);" class="btn btn-info"
           onclick="banner.openAddBanner()">Create</a>
    </div>
</div>
<div>
    <table class="table table-bordered table-hover" id="mytable">
        <thead>
            <tr>
           
                <th>Poster</th>
                <th>Status</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody id="tbtype">
        </tbody>
    </table>
</div>
<div id="addBanner" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add New Topic</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <input hidden id="TypeID" name="TypeName">
            <div class="modal-body">
                <div asp-validation-summary="All"></div>
            
                <div class="row form-group">
                    <div class="col-3">
                        <label>Poster</label>
                    </div>
                    <div class="col-9">
                        <img src="" id="Poster" width="200" height="210" />
                        <input type="file" id="FileUpload" class="custom-file" accept="image/*" onchange="banner.uploadPoster(this)" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                <a href="javascript:;" class="btn btn-success" onclick="banner.add()">Save</a>

            </div>
        </div>

    </div>
</div>
<!-- Modal Edit -->
<div id="editBanner" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add New Topic</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <input hidden id="TypeIDEdit" name="TypeName">
            <div class="modal-body">
                <div class="row form-group">
                   
                    <div class="col-3">
                        <label>Poster</label>
                    </div>
                    <div class="col-9">
                        <img src="" id="editPoster" width="200" height="210" />
                        <input type="file" id="FileUpload" class="custom-file" accept="image/*" onchange="banner.editPoster(this)" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
                <a href="javascript:;" class="btn btn-primary" onclick="banner.edit()">Update</a>

            </div>
        </div>

    </div>
</div>
<!-- Modal Delete-->
<div class="modal fade" id="deleteBanner" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">

                <input hidden id="TypeID" />
                <h4 class="modal-title">Delete Topic</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Do you want to delete this topic?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                <a href="javascript:;" class="btn btn-danger" onclick="banner.delete()">Yes</a>

            </div>
        </div>
    </div>
</div>
    


<!-- jQuery -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/js/metisMenu.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/startmin.js"></script>
@section Scripts{
    <script src="~/js/banner.js" asp-append-version="true"></script>

}
