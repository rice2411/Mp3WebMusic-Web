@model Mp3WebMusic_Web.Models.Account.LoginModel

@{ 
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewData["Title"] ="Login page";
}
<div class="page-content--bge5">
    <div class="container">
        <div class="login-wrap">
            <div class="login-content">
                <div class="login-logo">
                    <a href="#">
                        <img src="~/images/noavatar.png" width="120" height="130" alt="CoolAdmin">
                    </a>
                </div>
                <div class="login-form">
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label>Email Address</label>
                            <input class="au-input au-input--full" asp-for="Email" placeholder="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input class="au-input au-input--full" asp-for="Password" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="login-checkbox">
                            <label>
                                <input asp-for="RememberMe" >Remember Me
                            </label>
                            <label>
                                <a href="#">Forgotten Password?</a>
                            </label>
                        </div>
                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>
                    </form>
                    <div class="register-link">
                        <p>
                            Don't you have account?
                            <a asp-action="register" asp-controller="account">Sign Up Here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
