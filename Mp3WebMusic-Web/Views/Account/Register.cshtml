@model Mp3WebMusic_Web.Models.Account.RegisterModel
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewData["Title"] = "Register page";
}
<div class="page-content--bge5">
    <div class="container">
        <div class="login-wrap">
            <div class="login-content">
                <div class="login-logo">
                    <a href="#">
                        <img src="~/images/noavatar.png" width="120" height="130" alt="CoolAdmin">
                    </a>
                </div>
                <div class="login-form">
                    <form asp-controller="account" asp-action="register" method="post">
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input class="au-input au-input--full" asp-for="Email" placeholder="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input class="au-input au-input--full" asp-for="Password" placeholder="Password">
                            <span asp-validation-for="Password"  class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input class="au-input au-input--full" asp-for="ConfirmPassword" placeholder="Confirm Password">
                            <span asp-validation-for="ConfirmPassword"  class="text-danger"></span>
                        </div>
                        <div class="login-checkbox">
                            <label>
                                <input type="checkbox" name="aggree">Agree the terms and policy
                            </label>
                        </div>
                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">register</button>
                    </form>
                    <div class="register-link">
                        <p>
                            Already have account?
                            <a asp-controller="account" asp-action="login">Sign In</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>